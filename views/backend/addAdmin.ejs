<%- include('partials/head') %>
<div class="container">
    <%- include('partials/header') %>
    <%- include('partials/sidebar') %>
    <div class="content">
        <div class="wrapper">
            <div class="title">
                Add Admin Form
                <%- include('partials/sessionerrors') %>
            </div>
            <form action="addadmin/add" class="form" method="post">
                <div class="inputfield">
                    <label> Name</label>
                    <input type="text" class="input" name="name">
                </div>
                <div class="inputfield">
                    <label>Surname</label>
                    <input type="text" class="input" name="surname">
                </div>
                <div class="inputfield">
                    <label>Password</label>
                    <input type="password" class="input" name="password">
                </div>
                <div class="inputfield">
                    <label>Confirm Password</label>
                    <input type="password" class="input" name="confirm_pass">
                </div>
                <div class="inputfield">
                    <label>Email Address</label>
                    <input type="text" class="input" name="email">
                </div>
                <div class="inputfield">
                    <input type="submit" value="Add Admin" class="btn">
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
