<%- include('partials/head') %>
<%- include('partials/nav') %>
<div class="container">
    <div class="slider" style="width: <%=(slider.length+1)*100+'%'%>">
        <% slider.forEach(function (slide, index) { %>
            <div class="slide " style="background-image: url('/frontend/images/<%= slide.bg_image %>');width:<%=100/(slider.length+1)+'%'%>">
                <div class="caption">
                    <h2><%= slide.name %></h2>
                    <p><%= slide.info %></p>
                </div>
            </div>
        <% }) %>
        <div class="slide " style="background-image: url('/frontend/images/<%= slider[0].bg_image %>');width:<%=100/(slider.length+1)+'%'%>">
            <div class="caption">
                <h2><%= slider[0].name %></h2>
                <p><%= slider[0].info %></p>
            </div>
        </div>
    </div>
</div>

<div class="main_about">
    <h2 class="welcome">Welcome</h2>
    <div class="under_welcome">
